#!/home/gl/anaconda3/bin/python

from pushbullet.pushbullet import PushBullet
import sys

token = ''

with open('/home/gl/.pushbullettoken', 'r') as fp:
    token = fp.read().strip()

assert token != ''

p = PushBullet(token)

msg = ''

if len(sys.argv) > 1:
    msg = " ".join(sys.argv[1:])

p.pushNote('ujwpXtCfDFssjAp1s5qYcS', 'Task done', msg)
