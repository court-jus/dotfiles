#!/bin/bash

current="$(current_player)"
if [ "${current}" == "" ]
then
	exit
fi
artist=$(playerctl -p "${current}" metadata | grep "xesam:artist" | cut -d\  -f 3- | sed -e "s/^ *//")
title=$(playerctl -p "${current}" metadata | grep "xesam:title" | cut -d\  -f 3- | sed -e "s/^ *//")
state=$(playerctl -p "${current}" status)
if [ "${state}" == "Playing" ]
then
	icon="▶"
else
	icon="▮▮"
fi
echo "${icon} ${artist} - ${title}"
