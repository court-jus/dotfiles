#!/bin/bash

#export PATH=/home/gl/local_test/bin:$PATH
#export LD_LIBRARY_PATH=/home/gl/local_test/lib:$LD_LIBRARY_PATH

FOLD="run"

while true; do
    reset

    if [ "$1" == "master" ] ; then
        . ~/bin/localpython
    elif [ "$1" == "local" ]; then
        echo "Using local virtualenv"
    else
        . ~/bin/localpythontest
    fi

    if [ "$2" = "ltrace" ]; then
        PY="ltrace -f /usr/bin/python"
        LOG="&> ltrace"
    fi
    $PY /home/gl/src/MCA3/${FOLD}/djserv/webserver.py -c /etc/djserv/mca3.py -p 8888 --debug $LOG

    sleep 1
done

