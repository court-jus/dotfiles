#!/bin/bash

what=$1

if [ -z "$what" ]; then
    what="dev"
fi

echo "$what"

if [ "$what" = "wp" ]; then
    cd /home/gl/src/ikare/ikare-meta/docker/
    docker-compose exec gui bash -c 'cd /home/devikare/ikare-gui ; node_modules/.bin/webpack'
    xdotool search --name "IKare by ITrust.*Firefox"
    xdotool search --name "IKare by ITrust.*Firefox" key Ctrl+Shift+R
    exit 0
fi

cd /home/gl/src/ikare/ikare-meta/docker/
docker-compose exec gui make -C /home/devikare/ikare-gui $what
docker-compose exec api supervisorctl restart all
docker-compose exec gui supervisorctl restart all
xdotool search --name "IKare by ITrust.*Firefox" key Ctrl+Shift+R
